                    <customizedAction>
                        <className>king.flow.action.customization.AboutAction</className>
                    </customizedAction>
                </action>
            </item>
        </menu>
    </menubar>
    <contents>
        <page>./conf-auth/100/panel-logon-100.xml</page>
