<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>2000301</id>
    <type>Panel</type>
    <active>false</active>
	<background>/image/2.jpg</background>
	<component>
        <id>2000302</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>历史交易查询</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
	
	<component>
        <id>2000303</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>230</y>
                <width>100</width>
                <heigh>60</heigh>
            </rect>
            <text>卡号:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>2000304</id>
        <type>ComboBox</type>
        <attribute>
            <rect>
                <x>350</x>
                <y>230</y>
                <width>430</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		
		<action>
            <showComboBoxAction>
                <items>/, ACTION4/读银行卡</items>
            </showComboBoxAction>
            <swipe2In1CardAction>
                <nextCursor>2000306</nextCursor>
                <editable>true</editable>
            </swipe2In1CardAction>
        </action>
		
		<action>
			<playMediaAction>
                <media>./media/accout.wav</media>
            </playMediaAction>
        </action>
		
    </component>
	
	<component>
        <id>2000305</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>330</y>
                <width>100</width>
                <heigh>60</heigh>
            </rect>
            <text>密码:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>

    </component>
	
	<component>
        <id>2000306</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>350</x>
                <y>330</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		<action>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>
			
			<playMediaAction>
                <media>./media/passwd.wav</media>
            </playMediaAction>
			
			
			<customizedAction>
                <className>king.flow.action.customization.CusorMoveAction</className>
                <constructorParameters>
                    <parameter>
                        <type>int</type>
                        <value>2000304</value>
                    </parameter>
                    <parameter>
                        <type>int</type>
                        <value>2000311</value>
                    </parameter>
                </constructorParameters>
			</customizedAction>
			
			
			
        </action>
    </component>
	
	
	
    <component>
        <id>2000311</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>提交</text>
        </attribute>
        <action>
            <sendMsgAction>
                <prsCode>queryTranDetail</prsCode>
                <conditions>2000304, 2000306</conditions>
                <nextStep>  
                    <nextPanel>2000301</nextPanel> 
                    <display>2000314</display>  
                </nextStep>
                <exception> 
                    <nextPanel>999</nextPanel>  
                    <display>9993</display>  
                </exception>
				
				
				<checkRules>
					<notNull>
                        <content>2000304</content>
                        <errMsg>卡号不能为空</errMsg>
                    </notNull>
					
                    <notNull>
                        <content>2000306</content>
                        <errMsg>密码不能为空</errMsg>
                    </notNull>

                </checkRules>

				
            </sendMsgAction>
			
			
			
			<customizedAction>
                <className>king.flow.action.customization.CusorMoveAction</className>
                <constructorParameters>
                    <parameter>
                        <type>int</type>
                        <value>2000306</value>
                    </parameter>
                    <parameter>
                        <type>int</type>
                        <value>2000311</value>
                    </parameter>
                </constructorParameters>
			</customizedAction>
        </action>
    </component>
	
    <component>
        <id>2000312</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>700</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>200</nextPanel>
            </jumpPanelAction>
        </action>
		<action>
            <cleanAction>
                <conditions>2000304,2000306,2000314</conditions>
            </cleanAction>
        </action> 

		
    </component>
	
	
    <decorator>
        <id>2000313</id>
        <type>ScrollPanel</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>560</y>
                <width>1280</width>
                <heigh>400</heigh>
            </rect>
            <debug>false</debug>
        </attribute>
        <component>
            <id>2000314</id>
            <type>Table</type>
            <attribute>
                <rect>
                    <x>0</x>
                    <y>560</y>
                    <width>1280</width>
                    <heigh>400</heigh>
                </rect>
                <debug>false</debug>
            </attribute>
            <action>
                <showTableAction>
                    <columnNames>交易时间, 金额, 支付方式, 对方账户</columnNames>
                </showTableAction>
				<setFontAction>
                <fontSize>22</fontSize>
				</setFontAction>
            </action>
        </component>
    </decorator>
	
	
	<component>
        <id>2000315</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>970</y>
                <width>1024</width>
                <heigh>70</heigh>
            </rect>
            <text>   查询最近50历史交易记录</text>
			<debug>false</debug>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
</panel>
