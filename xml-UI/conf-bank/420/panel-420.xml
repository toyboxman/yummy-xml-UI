                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>

	<component>
        <id>4208</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>580</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		<action>
			<playMediaAction>
                <media>./media/audio/name.wav</media>
            </playMediaAction>
        </action>
		
		<action>
			<virtualKeyboardAction>
