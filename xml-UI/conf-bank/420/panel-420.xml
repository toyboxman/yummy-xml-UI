        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>40</nextPanel>
            </jumpPanelAction>
			<setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <cleanAction>
                <conditions>4204,4206,4208,42010,42012</conditions>
            </cleanAction>
        </action>   
    </component>
	
	<component>
