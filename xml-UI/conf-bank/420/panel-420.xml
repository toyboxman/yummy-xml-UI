    <type>Panel</type>
    <active>false</active>
	<background>/image/1.jpg</background>
	<component>
        <id>4202</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>企业主动付款</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
	<component>
        <id>4203</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>280</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>付款卡号:</text>
        </attribute>
        <action>
