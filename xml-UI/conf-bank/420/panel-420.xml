</swipe2In1CardAction>
        </action>
		
		
		<action>
			<playMediaAction>
                <media>./media/audio/accoutfrom.wav</media>
            </playMediaAction>
        </action>
		
    </component>
	
	<component>
        <id>4209</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>380</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
