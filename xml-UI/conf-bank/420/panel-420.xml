                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
	<component>
        <id>42010</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>380</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		<action>
			<playMediaAction>
                <media>./media/audio/money.wav</media>
            </playMediaAction>
			
			<limitInputAction>
                <length>16</length>
                <enableCashLimit>true</enableCashLimit>
