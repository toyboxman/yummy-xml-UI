            </setFontAction>
        </action>
	
    </component>
	
	<component>
        <id>42012</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>680</y>
                <width>150</width>
                <heigh>50</heigh>
            </rect>
        </attribute>
		
		<action>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>
			
			<playMediaAction>
                <media>./media/audio/passwd.wav</media>
            </playMediaAction>
			
        </action>
		
    </component>
	
    <component>
        <id>42013</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>850</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>提交</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <sendMsgAction>
                <prsCode>qypayQuery</prsCode>
                <conditions>4204,4206,4208,42010,42012</conditions>
                <nextStep>  
                    <nextPanel>288820</nextPanel> 
                    <display>288822</display>  
                </nextStep>
                <exception> 
                    <nextPanel>99901</nextPanel>  
                    <display>99904</display>  
                </exception>
				
				<checkRules>
					<notNull>
                        <content>4204</content>
                        <errMsg>付款卡号不能为空</errMsg>
                    </notNull>
					
                    <notNull>
                        <content>4206</content>
                        <errMsg>收款账号不能为空</errMsg>
                    </notNull>
					
					<notNull>
                        <content>4208</content>
                        <errMsg>收款户名不能为空</errMsg>
                    </notNull>
					
					<!--<validateCJK>
                        <content>4208</content>
                        <errMsg>收款户名必须是中文,请检查是否有空格</errMsg>
                    </validateCJK>-->
					
					<notNull>
                        <content>42010</content>
                        <errMsg>转账金额不能为空</errMsg>
                    </notNull>
					
					<notNull>
                        <content>42012</content>
                        <errMsg>密码不能为空</errMsg>
                    </notNull>
					
					
                    <template>
                        <content>4204</content>
                        <pattern>6217</pattern>
                        <errMsg>当前使用非本行发行卡片，请使用本行卡</errMsg>
                    </template>
				</checkRules>	
				
            </sendMsgAction>
        </action>
		
    </component>
	
    <component>
        <id>42014</id>
        <type>Button</type>
        <attribute>
