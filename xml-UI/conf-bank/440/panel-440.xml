<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>4401</id>
    <type>Panel</type>
    <active>false</active>
	<background>/image/1.jpg</background>
	<component>
        <id>4402</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>代发工资</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
	<component>
        <id>4403</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>280</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>付款卡号:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>

	<component>
        <id>4404</id>
        <type>ComboBox</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>280</y>
                <width>430</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		<action>
            <showComboBoxAction>
                <items>/, ACTION4/读银行卡</items>
            </showComboBoxAction>
            <swipe2In1CardAction>
                <nextCursor>3000210</nextCursor>
                <editable>true</editable>
</swipe2In1CardAction>
        </action>
		
		
		
		<action>
			<playMediaAction>
                <media>./media/audio/accoutfrom.wav</media>
            </playMediaAction>
        </action>
		
    </component>
	
	
	<component>
        <id>4405</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>380</x>
                <y>380</y>
                <width>100</width>
                <heigh>60</heigh>
            </rect>
            <text>密码:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
	
    </component>
	
	<component>
        <id>4406</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>380</y>
                <width>150</width>
                <heigh>50</heigh>
            </rect>
        </attribute>
		
		
	
		<action>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>
			
			<playMediaAction>
                <media>./media/audio/passwd.wav</media>
            </playMediaAction>
			
        </action>
    </component>
	
    <component>
        <id>4407</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>850</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>提交</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <sendMsgAction>
                <prsCode>paysalary</prsCode>
                <conditions>4404,4406</conditions>
                <nextStep>  
                    <nextPanel>288810</nextPanel> 
                    <display>288812</display>  
                </nextStep>
                <exception> 
                    <nextPanel>99901</nextPanel>  
                    <display>99904</display>  
                </exception>
				
				<checkRules>
					<notNull>
                        <content>4404</content>
                        <errMsg>付款卡号不能为空</errMsg>
                    </notNull>

                    <template>
                        <content>4404</content>
                        <pattern>6217</pattern>
                        <errMsg>当前使用非本行发行卡片，请使用本行卡</errMsg>
                    </template>
					
					<notNull>
                        <content>4406</content>
                        <errMsg>付款密码不能为空</errMsg>
                    </notNull>
				</checkRules>	

				
            </sendMsgAction>
        </action>
		
    </component>
	
	
    <component>
        <id>4408</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>800</x>
                <y>850</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>40</nextPanel>
            </jumpPanelAction>
			<setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
	<component>
        <id>4409</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>930</y>
                <width>1024</width>
                <heigh>150</heigh>
            </rect>
            <text>   代发工资</text>
			<debug>false</debug>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
</panel>
