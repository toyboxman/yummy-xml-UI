<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>5000201</id>
    <type>Panel</type>
    <active>false</active>
	<background>/image/1.jpg</background>
	<component>
        <id>5000202</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>指纹绑定</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
	<component>
        <id>5000203</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>380</x>
                <y>230</y>
                <width>100</width>
                <heigh>60</heigh>
            </rect>
            <text>卡号:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>

	<component>
        <id>5000204</id>
        <type>ComboBox</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>230</y>
                <width>430</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		<action>
            <showComboBoxAction>
                <items>/, ACTION4/读银行卡</items>
            </showComboBoxAction>
            <swipe2In1CardAction>
                <nextCursor>5000206</nextCursor>
                <editable>true</editable>
</swipe2In1CardAction>
        </action>
		
		<action>
			<playMediaAction>
                <media>./media/audio/accout.wav</media>
            </playMediaAction>
        </action>
		
    </component>
	
	<component>
        <id>5000205</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>380</x>
                <y>330</y>
                <width>100</width>
                <heigh>60</heigh>
            </rect>
            <text>密码:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
	<component>
        <id>5000206</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>330</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		<action>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>
        </action>
        
		<action>
			<playMediaAction>
                <media>./media/audio/passwd.wav</media>
            </playMediaAction>
        </action>
		
    </component>
	
	
	<component>
        <id>5000207</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>320</x>
                <y>430</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>指纹密码:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>

	<component>
        <id>5000208</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>430</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        
       <action>
            <rwFingerPrintAction>
                <nextCursor>5000209</nextCursor> <!-- next component cursor focuses on after swipe card operation -->
                <writePrint>true</writePrint> <!-- whether this is finger print registry operation -->
            </rwFingerPrintAction>
       </action>
		
		<action>
			<playMediaAction>
                <media>./media/audio/finger.wav</media>
            </playMediaAction>
        </action>
    </component>
	
    <component>
        <id>5000209</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>600</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>提交</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <sendMsgAction>
                <prsCode>bindfinger</prsCode>
                <conditions>5000204,5000206,5000208</conditions>
                <nextStep>  
                    <nextPanel>50008881</nextPanel> 
                    <display>50008883</display>  
                </nextStep>
                <exception> 
                    <nextPanel>50000001</nextPanel>  
                    <display>50000003</display>  
                </exception>
                
                <checkRules>
					<notNull>
	                    <content>5000204</content>
	                    <errMsg>卡号不能为空</errMsg>
	                </notNull>
					
	                <notNull>
	                    <content>5000206</content>
	                    <errMsg>密码不能为空</errMsg>
	                </notNull>
	                
	                <notNull>
	                    <content>5000208</content>
	                    <errMsg>指纹密码不能为空</errMsg>
	                </notNull>
           		 </checkRules>
            
            </sendMsgAction>
          
        </action>
		
    </component>
	
    <component>
        <id>5000210</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>800</x>
                <y>600</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>500</nextPanel>
            </jumpPanelAction>
			<setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <cleanAction>
                <conditions>5000204,5000206,5000208</conditions>
            </cleanAction>
        </action>   
		
    </component>
	
	
</panel>
