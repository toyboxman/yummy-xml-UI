<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>50001001</id>
    <type>Panel</type>
    <active>false</active>
	<background>/image/2.jpg</background>
	<component>
        <id>50001002</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>确认指纹同行转账信息</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
	
	<component>
        <id>50001003</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>350</x>
                <y>200</y>
                <width>900</width>
                <heigh>300</heigh>
            </rect>
            <text></text>
			<debug>false</debug>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>30</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>50001004</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>400</x>
                <y>700</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>确定转账</text>
        </attribute>
        <action>
            <customizedAction>
                <className></className>
            </customizedAction>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <sendMsgAction>
                <prsCode>samefingTrando</prsCode>
                <conditions>5000404,5000406,5000408,5000410,5000412</conditions>
                <nextStep>  
                    <nextPanel>50001011</nextPanel> 
                    <display>50001013</display>  
                </nextStep>
                <exception> 
                    <nextPanel>50000001</nextPanel>  
                    <display>50000003</display>  
                </exception>
            </sendMsgAction>
        </action>
		
    </component>
	
    <component>
        <id>50001005</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>700</x>
                <y>700</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>取消转账</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>500</nextPanel>
            </jumpPanelAction>
			 <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <cleanAction>
                <conditions>5000404,5000406,5000408,5000410,5000412</conditions>
            </cleanAction>
        </action>
    </component>
	
	
</panel>
