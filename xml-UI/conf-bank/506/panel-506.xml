        </attribute>
        <action>
            <fontSetAction>
                <fontSize>30</fontSize>
            </fontSetAction>
        </action>
        <action>
            <msgSendAction>
                <prsCode>printPB</prsCode>
                <conditions>5053</conditions>
                <nextStep>  
                    <nextPanel>505</nextPanel> 
                    <display>50571</display>  
                </nextStep>
                <exception> 
                    <nextPanel>999</nextPanel>  
                    <display>9993</display>  
                </exception>
				
