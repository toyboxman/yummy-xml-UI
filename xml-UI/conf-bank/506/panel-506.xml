    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>506</id>
    <type>Panel</type>
    <active>false</active>
    <background>/image/3.jpg</background>
    <component>
        <id>5061</id>
        <type>Label</type>
        <attribute>
