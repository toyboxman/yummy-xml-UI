                <className>king.flow.action.customization.PrintPassbookAction</className>
                <constructorParameters>
                    <parameter>
                        <type>int</type>
                        <value>50571</value>
                    </parameter>
                </constructorParameters>
            </customizedAction>
        </action>		
    </component>
	
    <component>
        <id>5056</id>
