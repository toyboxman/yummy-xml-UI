<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../conf/WindowXmlSchema.xsd'>
    <id>100</id>
    <type>Panel</type>
    <active>true</active>
    <component>
        <id>1001</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>860</x>
                <y>70</y>
                <width>600</width>
                <heigh>130</heigh>
            </rect>
            <text>&lt;html&gt;&#160;&#160;&#160;融科汇通&lt;br&gt;智慧社区物业服务系统&lt;/html&gt;</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>40</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>1002</id>
        <type>Button</type>
        <attribute>
            <text>缴费业务</text>
            <rect>
                <x>900</x>
                <y>200</y>
                <width>300</width>
                <heigh>100</heigh>
            </rect>
            <debug>false</debug>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>105</nextPanel>
            </jumpPanelAction>
            <setFontAction>
                <fontSize>30</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>1003</id>
        <type>Button</type>
        <attribute>
            <text>查询业务</text>
            <rect>
                <x>900</x>
                <y>330</y>
                <width>300</width>
                <heigh>100</heigh>
            </rect>
            <debug>false</debug>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>205</nextPanel>
            </jumpPanelAction>
            <setFontAction>
                <fontSize>30</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>1004</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>340</x>
                <y>930</y>
                <width>1024</width>
                <heigh>150</heigh>
            </rect>
            <text>欢迎使用社区物业服务系统,请按相应功能键获取服务</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
    
    <component>
        <id>1005</id>
        <type>VideoPlayer</type>
        <attribute>
            <rect>
                <x>90</x>
                <y>200</y>
                <width>645</width>
                <heigh>360</heigh>
            </rect>
        </attribute>
        <action>
            <playVideoAction>
                <media>./media/video/Smart-Community.mp4</media>
                <replayInterval>30</replayInterval>
            </playVideoAction>
        </action>
    </component>
</panel>
