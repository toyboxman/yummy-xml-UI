<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../../../conf/WindowXmlSchema.xsd'>
    <id>230</id>
    <type>Panel</type>
    <component>
        <id>2301</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>消费卡信息查询</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
    
    <component>
        <id>2302</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>230</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
            <text>智能卡号</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>2303</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>230</y>
                <width>400</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>2303</upCursor>
                <downCursor>2305</downCursor>
            </moveCursorAction>
        </action>
    </component>
	
    <component>
        <id>2304</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>330</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
            <text>查询密码</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>2305</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>330</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>2303</upCursor>
                <downCursor>2306</downCursor>
            </moveCursorAction>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>	
            <playMediaAction>
                <media>./media/passwd.wav</media>
            </playMediaAction>
        </action>
    </component>
	
    <component>
        <id>2306</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>查询</text>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>2305</upCursor>
                <downCursor>2307</downCursor>
            </moveCursorAction>
            <sendMsgAction>
                <prsCode>queryCard</prsCode>
                <conditions>2303, 2305</conditions>
                <nextStep>  
                    <nextPanel>235</nextPanel> 
                    <display>2352</display>  
                </nextStep>
                <exception> 
                    <nextPanel>236</nextPanel>  
                    <display>2363</display>  
                </exception>			
                <checkRules>
                    <notNull>
                        <content>2303</content>
                        <errMsg>智能卡号不能为空</errMsg>
                    </notNull>			
                    <notNull>
                        <content>2305</content>
                        <errMsg>查询密码不能为空</errMsg>
                    </notNull>
                </checkRules>		
            </sendMsgAction>		
        </action>
    </component>
	
    <component>
        <id>2307</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>700</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>205</nextPanel>
            </jumpPanelAction>
            <cleanAction>
                <conditions>2303,2305</conditions>
            </cleanAction>
        </action>	
    </component>
    
    <component>
        <id>2308</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>970</y>
                <width>1024</width>
                <heigh>70</heigh>
            </rect>
            <text>   消费查询信息管理</text>
            <debug>false</debug>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
</panel>
