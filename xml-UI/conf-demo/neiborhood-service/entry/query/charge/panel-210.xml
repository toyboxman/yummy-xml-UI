<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../../../conf/WindowXmlSchema.xsd'>
    <id>210</id>
    <type>Panel</type>
    <component>
        <id>2101</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>缴费信息记录查询</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
    
    <component>
        <id>2102</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>230</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
            <text>智能卡号:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>2103</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>230</y>
                <width>400</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>5014</upCursor>
                <downCursor>5016</downCursor>
            </moveCursorAction>
        </action>
    </component>
	
    <component>
        <id>2104</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>330</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
            <text>查询密码:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>2105</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>330</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>5014</upCursor>
                <downCursor>5018</downCursor>
            </moveCursorAction>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>	
            <playMediaAction>
                <media>./media/passwd.wav</media>
            </playMediaAction>
        </action>
    </component>
	
    <component>
        <id>2106</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>查询</text>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>5014</upCursor>
                <downCursor>5018</downCursor>
            </moveCursorAction>
            <sendMsgAction>
                <prsCode>queryCharge</prsCode>
                <conditions>5014, 5016</conditions>
                <nextStep>  
                    <nextPanel>5011</nextPanel> 
                    <display>50110</display>  
                </nextStep>
                <exception> 
                    <nextPanel>999</nextPanel>  
                    <display>9993</display>  
                </exception>			
                <checkRules>
                    <notNull>
                        <content>5014</content>
                        <errMsg>智能卡号不能为空</errMsg>
                    </notNull>			
                    <notNull>
                        <content>5016</content>
                        <errMsg>查询密码不能为空</errMsg>
                    </notNull>
                </checkRules>		
            </sendMsgAction>		
        </action>
    </component>
	
    <component>
        <id>2107</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>700</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>205</nextPanel>
            </jumpPanelAction>
            <cleanAction>
                <conditions>2103,2105</conditions>
            </cleanAction>
        </action>	
    </component>
    
    <component>
        <id>2108</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>970</y>
                <width>1024</width>
                <heigh>70</heigh>
            </rect>
            <text>   缴费查询信息管理</text>
            <debug>false</debug>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <decorator>
        <id>2109</id>
        <type>ScrollPanel</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>560</y>
                <width>1280</width>
                <heigh>400</heigh>
            </rect>
            <debug>false</debug>
        </attribute>
        <component>
            <id>21010</id>
            <type>Table</type>
            <attribute>
                <rect>
                    <x>0</x>
                    <y>560</y>
                    <width>1280</width>
                    <heigh>400</heigh>
                </rect>
                <debug>false</debug>
            </attribute>
            <action>
                <setFontAction>
                    <fontSize>22</fontSize>
                </setFontAction>
                <showTableAction>
                    <columnNames>流水号, 缴费时间, 缴费业务类型, 缴费金额</columnNames>
                </showTableAction>
            </action>
        </component>
    </decorator>
</panel>
