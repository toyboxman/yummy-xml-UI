<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>100</id>
    <type>Panel</type>
    <active>true</active>
    <background>/image/5.jpg</background>
    <component>
        <id>101</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>600</x>
                <y>0</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>Welcome</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
    <component>
        <id>102</id>
        <type>Button</type>
        <attribute>
            <text>查询业务</text>
            <rect>
                <x>200</x>
                <y>300</y>
                <width>300</width>
                <heigh>50</heigh>
            </rect>
            <debug>false</debug>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>200</nextPanel>
            </jumpPanelAction>
        </action>
    </component>
    <component>
        <id>103</id>
        <type>Button</type>
        <attribute>
            <text>启动/关闭虚拟键盘</text>
            <rect>
                <x>700</x>
                <y>300</y>
                <width>300</width>
                <heigh>50</heigh>
            </rect>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>18</fontSize>
            </setFontAction>
            <virtualKeyboardAction>
                <start>AVF_Display.exe</start>
                <stop>AVF_Hide.exe</stop>
                <!--<start>F:\DEV\netbeans-project\bankApp\AVF\AVF_Start.exe</start>
                <stop>F:\DEV\netbeans-project\bankApp\AVF\AVF_Stop.exe</stop>-->
            </virtualKeyboardAction>
        </action>
    </component>
    <component>
        <id>104</id>
        <type>ComboBox</type>
        <attribute>
            <rect>
                <x>700</x>
                <y>400</y>
                <width>300</width>
                <heigh>40</heigh>
            </rect>
        </attribute>
        <action>
            <showComboBoxAction>
                <items>CNY/人民币, USD/美元, JPY/日元</items>
            </showComboBoxAction>
            <playMediaAction>
                <media>./media/goodbye.wav</media>
            </playMediaAction>
        </action>
    </component>
    <component>
        <id>105</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>400</x>
                <y>400</y>
                <width>300</width>
                <heigh>40</heigh>
            </rect>
        </attribute>
        <action>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>
            <useTipAction>
                <tip>&lt;html&gt;&lt;center&gt;&lt;h1&gt;Hello,&lt;/h1&gt;&lt;h2 style=&#39;color: red; font-style: italic;&#39;&gt;World&lt;/h2&gt;&lt;b&gt;Modified&lt;br/&gt;ToolTipText&lt;/b&gt;&lt;/center&gt;&lt;br/&gt;so simple.请输入账号密码</tip>
            </useTipAction>
            <playMediaAction>
                <media>./media/song.wav</media>
            </playMediaAction>
            <!--<virtualKeyboardAction>
                <start>F:\DEV\netbeans-project\bankApp\AVF\AVF_Display.exe</start>
                <stop>F:\DEV\netbeans-project\bankApp\AVF\AVF_Hide.exe</stop>
            </virtualKeyboardAction>-->
        </action>
    </component>
    <component>
        <id>106</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>400</x>
                <y>450</y>
                <width>300</width>
                <heigh>40</heigh>
            </rect>
        </attribute>
        <action>
            <rwFingerPrintAction>
                <nextCursor>104</nextCursor>
                <writePrint>true</writePrint>
            </rwFingerPrintAction>
        </action>
    </component>
    <component>
        <id>107</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>400</x>
                <y>500</y>
                <width>300</width>
                <heigh>40</heigh>
            </rect>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>106</upCursor>
                <downCursor>105</downCursor>
            </moveCursorAction>
            <virtualKeyboardAction>
                <start>AVF_Display.exe</start>
                <stop>AVF_Hide.exe</stop>
                <!--<start>F:\DEV\netbeans-project\bankApp\AVF\AVF_Start.exe</start>
                <stop>F:\DEV\netbeans-project\bankApp\AVF\AVF_Stop.exe</stop>-->
            </virtualKeyboardAction>
        </action>
    </component>
    <component>
        <id>108</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>40</x>
                <y>50</y>
                <width>220</width>
                <heigh>40</heigh>
            </rect>
            <text>testID : ${TERMINAL_ID}</text>
        </attribute>
    </component>
    <component>
        <id>109</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>40</x>
                <y>100</y>
                <width>220</width>
                <heigh>40</heigh>
            </rect>
        </attribute>
        <action>
            <showClockAction>
                <!-- you can learn how to define date-time format -->
                <!-- https://docs.oracle.com/javase/8/docs/api/java/util/Formatter.html#Formatter-java.util.Locale- 
                default is <format>%1$tc</format> -->
                <format>%1$tT</format>
            </showClockAction>
        </action>
    </component>
    <component>
        <id>110</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>400</x>
                <y>600</y>
                <width>300</width>
                <heigh>40</heigh>
            </rect>
        </attribute>
    </component>
    <component>
        <id>110</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>810</x>
                <y>600</y>
                <width>75</width>
                <heigh>40</heigh>
            </rect>
            <text>查询</text>
        </attribute>
        <action>
            <sendMsgAction>
                <prsCode>queryGas</prsCode>
                <conditions>108</conditions>
                <exception>
                    <display>109</display>
                    <nextPanel>100</nextPanel>
                </exception>
                <nextStep>
                    <display>109</display>
                    <nextPanel>100</nextPanel>
                </nextStep>
            </sendMsgAction>
        </action>
    </component>
</panel>
