<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>900</id>
    <type>Panel</type>
    <active>false</active>
    <component>
        <id>911</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>600</x>
                <y>0</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>欢迎使用自助银行查询业务</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
    <component>
        <id>922</id>
        <type>Button</type>
        <attribute>
            <text>确认</text>
            <rect>
                <x>200</x>
                <y>300</y>
                <width>300</width>
                <heigh>50</heigh>
            </rect>
            <debug  enable="false"></debug>
        </attribute>
        <action>
            <cleanAction>
                <conditions>302,304</conditions>
            </cleanAction>
            <sendMsgAction>
                <prsCode>transferCash</prsCode>
                <conditions>302,304,307</conditions>
                <nextStep>
                    <nextPanel>970</nextPanel>
                    <display>971</display>
                </nextStep>
                <exception>
                    <nextPanel>970</nextPanel>
                    <display>971</display>
                </exception>
            </sendMsgAction>
        </action>
    </component>
    <component>
        <id>923</id>
        <type>Button</type>
        <attribute>
            <text>返回</text>
            <rect>
                <x>700</x>
                <y>300</y>
                <width>300</width>
                <heigh>50</heigh>
            </rect>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>300</nextPanel>
            </jumpPanelAction>
            <cleanAction>
                <conditions>302,304</conditions>
            </cleanAction>
        </action>
        <action>
            <setFontAction>
                <fontSize>18</fontSize>
            </setFontAction>
        </action>
    </component>
</panel>
