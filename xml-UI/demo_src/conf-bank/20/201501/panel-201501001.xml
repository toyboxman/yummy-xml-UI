     查询用户欠费信息，获取欠费金额后，用户插入银行卡、输入密码
-->

<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>201501001</id>
    <type>Panel</type>
    <active>false</active>
	<background>/image/1.jpg</background>
	 <component>
        <id>201501002</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>400</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>普卡代缴燃气费第2步</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>201501003</id>
        <type>Table</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>300</y>
                <width>900</width>
                <heigh>200</heigh>
            </rect>
            <text></text>
        </attribute>
       	<action>
			<showTableAction>
				<columnNames>项目名称, 项目内容</columnNames>
			</showTableAction>
			<setFontAction>
			<fontSize>22</fontSize>
			</setFontAction>
		</action>
    </component>
    
   <component>
        <id>201501004</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>650</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>付款卡号:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
    
    <component>
        <id>201501005</id>
        <type>ComboBox</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>650</y>
                <width>430</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		<action>
            <showComboBoxAction>
                <items>/, ACTION4/读银行卡</items>
            </showComboBoxAction>
            <swipe2In1CardAction>
                <nextCursor>201501007</nextCursor>
                <editable>true</editable>
            </swipe2In1CardAction>
        </action>
		
		<action>
			<playMediaAction>
                <media>./media/audio/accoutfrom.wav</media>
            </playMediaAction>
        </action>
		
    </component>
    
   <component>
        <id>201501006</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>750</y>
                <width>100</width>
                <heigh>60</heigh>
            </rect>
            <text>密码:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
	
    </component>
	
	<component>
        <id>201501007</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>750</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		<action>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>
			
			<playMediaAction>
                <media>./media/audio/passwd.wav</media>
            </playMediaAction>
        </action>
    </component>
	
    <component>
        <id>201501008</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>500</x>
                <y>850</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>下一步</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
		
		<action>
            <sendMsgAction>
                <prsCode>payPkGas_2</prsCode>
                <conditions>201501005,201501007</conditions>
                <nextStep>  
                    <nextPanel>201588</nextPanel> 
                    <display>201586</display>  
                </nextStep>
                <exception> 
                    <nextPanel>201599</nextPanel>  
                    <display>201597</display>  
                </exception>
                <checkRules>
					<notNull>
                        <content>201501005</content>
                        <errMsg>请插入银行卡，并点击下拉菜单进行读卡</errMsg>
                    </notNull>
                    <notNull>
                        <content>201501007</content>
                        <errMsg>请用密码键盘输入密码</errMsg>
                    </notNull>
                </checkRules>
            </sendMsgAction>
        </action>
    </component>
	
	<component>
        <id>201501009</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>800</x>
                <y>850</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>201</nextPanel>
            </jumpPanelAction>
        </action>
		<action>
            <cleanAction>
                <conditions>201501005,201501007,201504</conditions>
            </cleanAction>
        </action>   
    </component>
     <component>
        <id>602050</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>930</y>
                <width>1024</width>
                <heigh>150</heigh>
            </rect>
            <text>   普卡代缴燃气费</text>
			
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
	
</panel>
