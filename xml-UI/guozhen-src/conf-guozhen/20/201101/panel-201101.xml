<?xml version="1.0" encoding="UTF-8"?>

<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../schema/WindowXmlSchema.xsd'>
    <id>201101</id>
    <type>Panel</type>
    <active>false</active>
    <background>/image/1.jpg</background>
    <component>
        <id>201102</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>缴费明细查询</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>201103</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>230</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>用户号:</text>
        </attribute>
    </component>
    
    <component>
        <id>201104</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>370</x>
                <y>230</y>
                <width>430</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
        <action>
            <playMediaAction>
                <media>./media/audio/jiaofeinum.wav</media>
            </playMediaAction>	
        </action>
    </component>


    <component>
        <id>201111</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>480</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>查询</text>
        </attribute>
        <action>
            <sendMsgAction>
                <prsCode>queryTranDetail</prsCode>
                <conditions>201104</conditions>
                <nextStep>  
                    <nextPanel>201101</nextPanel> 
                    <display>201114</display>  
                </nextStep>
                <exception> 
                    <nextPanel>201199</nextPanel>  
                    <display>201197</display>  
                </exception>
				
                <checkRules>
                    <notNull>
                        <content>201104</content>
                        <errMsg>用户号不能为空</errMsg>
                    </notNull>
                </checkRules>
                
            </sendMsgAction>
        </action>
    </component>
	
    <component>
        <id>201112</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>750</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>201</nextPanel>
            </jumpPanelAction>
        </action>
        <action>
            <cleanAction>
                <conditions>201104,201114</conditions>
            </cleanAction>
        </action> 

		
    </component>
	
	
    <decorator>
        <id>201113</id>
        <type>ScrollPanel</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>560</y>
                <width>1280</width>
                <heigh>400</heigh>
            </rect>
            
        </attribute>
        <component>
            <id>201114</id>
            <type>Table</type>
            <attribute>
                <rect>
                    <x>0</x>
                    <y>560</y>
                    <width>1280</width>
                    <heigh>400</heigh>
                </rect>
                
            </attribute>
            <action>
                <showTableAction>
                    <columnNames>交易时间, 金额, 支付方式, 对方账户</columnNames>
                </showTableAction>
            </action>
            <action>
                <setFontAction>
                    <fontSize>22</fontSize>
                </setFontAction>
            </action>
        </component>
    </decorator>
	
    <component>
        <id>201115</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>20</x>
                <y>970</y>
                <width>1024</width>
                <heigh>70</heigh>
            </rect>
            <text>查询最近20笔历史交易记录</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
    
</panel>
