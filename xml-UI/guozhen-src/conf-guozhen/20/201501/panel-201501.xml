<?xml version="1.0" encoding="UTF-8"?>
<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../schema/WindowXmlSchema.xsd'>
    <id>201501</id>
    <type>Panel</type>
    <active>false</active>
    <background>/image/4.jpg</background>
    <component>
        <id>201502</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>350</x>
                <y>90</y>
                <width>610</width>
                <heigh>150</heigh>
            </rect>
            <text>普表代缴燃气费第1步(共3步)</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>201503</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>330</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>用户号:</text>
        </attribute>
    </component>

    <component>
        <id>201504</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>570</x>
                <y>330</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
        <action>
            <playMediaAction>
                <media>./media/audio/gas_charge_number.wav</media>
            </playMediaAction>
        </action>
        <action>
            <limitInputAction>
                <length>10</length>
                <enableNumberLimit>true</enableNumberLimit>
            </limitInputAction>
        </action>
    </component>
	
    <component>
        <id>201505</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>620</x>
                <y>700</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>下一步</text>
        </attribute>		
        <action>
            <sendMsgAction>
                <prsCode>query_pubiao</prsCode>
                <conditions>201504</conditions>
                <nextStep>  
                    <nextPanel>201501001</nextPanel>
                    <!--显示的信息是按照顺序依次显示到下方控件中，201501012前的控件不需要删除后，必须填充一个控件来接受这个数据，这样它才能接受到原来的数据，这里使用201596来接受数据使201501012可以接受到原来位子上的数据-->
                    <display>201501004,201501006,201501008,201501010,201596,201501012</display>
                    <nextCursor>201501016</nextCursor>
                    <trigger>201501014</trigger>
                </nextStep>
                <exception> 
                    <nextPanel>201599</nextPanel>  
                    <display>201596</display>  
                </exception>
                <checkRules>
                    <notNull>
                        <content>201504</content>
                        <errMsg>请输入用户号</errMsg>
                    </notNull>
                </checkRules>
            </sendMsgAction>
        </action>
    </component>
	
    <component>
        <id>201506</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>920</x>
                <y>700</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>201</nextPanel>
            </jumpPanelAction>
        </action>
		
        <action>
            <cleanAction>
                <conditions>201504</conditions>
            </cleanAction>
        </action>
    </component>
    <component>
        <id>201507</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>20</x>
                <y>930</y>
                <width>1024</width>
                <heigh>150</heigh>
            </rect>
            <text>普卡代缴燃气费</text>	
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
</panel>
