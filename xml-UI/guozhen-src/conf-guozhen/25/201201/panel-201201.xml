<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../WindowXmlSchema.xsd'>
    <id>201201</id>
    <type>Panel</type>
    <active>false</active>
	<background>/image/1.jpg</background>
	<component>
        <id>201202</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>IC卡交费明细查询</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
	
	<component>
        <id>201203</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>230</y>
                <width>280</width>
                <heigh>60</heigh>
            </rect>
            <text>燃气IC卡号:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>201204</id>
        <type>ComboBox</type>
        <attribute>
            <rect>
                <x>550</x>
                <y>230</y>
                <width>430</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
		
		<action>
            <showComboBoxAction>
                <items>/, ACTION4/读燃气卡</items>
            </showComboBoxAction>
            <swipe2In1CardAction>
                <nextCursor>201211</nextCursor>
                <editable>true</editable>
            </swipe2In1CardAction>
        </action>
		
		<action>
			<playMediaAction>
                <media>./media/audio/accout.wav</media>
            </playMediaAction>
        </action>
		
    </component>
	
    <component>
        <id>201211</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>提交</text>
        </attribute>
        <action>
            <sendMsgAction>
                <prsCode>queryPayGasDetail</prsCode>
                <conditions>201204</conditions>
                <nextStep>  
                    <nextPanel>201201001</nextPanel> 
                    <display>201201004,201201006,201201008,201201010,201201011</display>  
                </nextStep>
                <exception> 
                    <nextPanel>201299</nextPanel>  
                    <display>201297</display>  
                </exception>
				
				<checkRules>
					<notNull>
                        <content>201204</content>
                        <errMsg>卡号不能为空</errMsg>
                    </notNull>
                </checkRules>

				
            </sendMsgAction>
        </action>
    </component>
	
    <component>
        <id>201212</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>700</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>251</nextPanel>
            </jumpPanelAction>
        </action>
		<action>
            <cleanAction>
                <conditions>201204</conditions>
            </cleanAction>
        </action> 

    </component>


</panel>
