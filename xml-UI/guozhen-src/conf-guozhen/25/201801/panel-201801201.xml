<?xml version="1.0" encoding="UTF-8"?>
<!--
     查询用户欠费信息，获取欠费金额后，用户插入银行卡、输入密码
-->

<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../schema/WindowXmlSchema.xsd'>
    <id>201801201</id>
    <type>Panel</type>
    <active>false</active>
    <background>/image/1.jpg</background>
    <component>
        <id>201801202</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>350</x>
                <y>70</y>
                <width>610</width>
                <heigh>150</heigh>
            </rect>
            <text>IC卡代缴燃气费第3步(共4步)</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>201801203</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>100</x>
                <y>200</y>
                <width>250</width>
                <heigh>60</heigh>
            </rect>
            <text>购气数额:</text>
        </attribute>
    </component>
    
    <component>
        <id>201801204</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>200</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>  
            <limitInputAction editable="false">
                <length>30</length>
            </limitInputAction>
        </action>
    </component>
    
    <component>
        <id>201801205</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>100</x>
                <y>300</y>
                <width>250</width>
                <heigh>60</heigh>
            </rect>
            <text>应付金额:</text>
        </attribute>
    </component>
    
    <component>
        <id>201801206</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>300</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>  
            <limitInputAction editable="false">
                <length>30</length>
            </limitInputAction>
        </action>
    </component>
    
    <component>
        <id>201801213</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>100</x>
                <y>400</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>付款卡号:</text>
        </attribute>
    </component>
    
    <component>
        <id>201801214</id>
        <type>ComboBox</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>400</y>
                <width>430</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
        <action>
            <showComboBoxAction>
                <items>/, ACTION4/读银行卡</items>
            </showComboBoxAction>
            <swipe2In1CardAction>
                <nextCursor>201801216</nextCursor>
                <editable>true</editable>
                <debug>
                    <cardId>6217888899999000</cardId>
                </debug>
            </swipe2In1CardAction>
        </action>
        <action>
            <playMediaAction>
                <media>./media/audio/accountfrom.wav</media>
            </playMediaAction>
        </action>
    </component>
    
    <component>
        <id>201801217</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>690</x>
                <y>400</y>
                <width>500</width>
                <heigh>60</heigh>
            </rect>
            <text>(请点击卡号框右侧按钮进行读卡)</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>24</fontSize>
                <fontStyle>PLAIN</fontStyle>
            </setFontAction>
        </action>
    </component>
    
    <component>
        <id>201801215</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>100</x>
                <y>500</y>
                <width>200</width>
                <heigh>60</heigh>
            </rect>
            <text>支付密码:</text>
        </attribute>
    </component>
	
    <component>
        <id>201801216</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>250</x>
                <y>500</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
		
        <action>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>
			
            <playMediaAction>
                <media>./media/audio/passwd.wav</media>
            </playMediaAction>
        </action>
    </component>
    
    <component>
        <id>201801222</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>400</x>
                <y>630</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>上一步</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>201801001</nextPanel>
            </jumpPanelAction>
        </action> 
        <action>
            <cleanAction>
                <conditions>201801214,201801216</conditions>
            </cleanAction>
        </action>  
    </component>
   
    
    <component>
        <id>201801219</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>660</x>
                <y>630</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>下一步</text>
        </attribute>
        <action>
            <sendMsgAction>
                <prsCode>pay_ICbiao</prsCode>
                <conditions>201801214,201801216</conditions>
                <nextStep>  
                    <nextPanel>201888</nextPanel> 
                    <display>201886</display>  
                </nextStep>
                <exception> 
                    <nextPanel>201899</nextPanel>  
                    <display>201896</display>  
                </exception>
                <checkRules>
                    <notNull>
                        <content>201801214</content>
                        <errMsg>请点击卡号框右侧按钮进行读卡</errMsg>
                    </notNull>
                    <notNull>
                        <content>201801216</content>
                        <errMsg>请用密码键盘输入密码</errMsg>
                    </notNull>
                </checkRules>
            </sendMsgAction>
        </action>
    </component>
	
    <component>
        <id>201801220</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>920</x>
                <y>630</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>251</nextPanel>
            </jumpPanelAction>
        </action>
        <action>
            <cleanAction>
                <conditions>201806,201801204,201801206,201801104,201801106,201801108,201801110,201801112,201801214,201801216,201801204,201801206</conditions>
            </cleanAction>
        </action>   
    </component>
    <component>
        <id>201801221</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>20</x>
                <y>930</y>
                <width>1024</width>
                <heigh>150</heigh>
            </rect>
            <text>IC卡代缴燃气费</text>	
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
	
</panel>
