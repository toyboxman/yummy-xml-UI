<?xml version="1.0" encoding="UTF-8"?>
<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../schema/WindowXmlSchema.xsd'>
    <id>30203</id>
    <type>Panel</type>
    <active>false</active>
    <background>/image/2.png</background>
    
    <component>
        <id>3020301</id>
        <type>Label</type>
        <attribute>
            <text>就诊卡注册</text>
            <rect>
                <x>450</x>
                <y>150</y>
                <width>510</width>
                <heigh>150</heigh>
            </rect>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
    
    <component>
        <id>3020302</id>
        <type>Label</type>
        <attribute>
        <text>手机号码:</text>
            <rect>
                <x>270</x>
                <y>350</y>
                <width>300</width>
                <heigh>50</heigh>
            </rect>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>30</fontSize>
            </setFontAction>
        </action>

   </component>
    <component>
        <id>3020303</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>350</y>
                <width>400</width>
                <heigh>50</heigh>
            </rect>
        </attribute>
        <action>
            <playMediaAction>
                <media>./media/audio/sk_phone_number.wav</media>
            </playMediaAction>
        </action>
        <action>
            <limitInputAction>
                <length>15</length>
            </limitInputAction>
        </action>
    </component>
   <component>
     <id>3020305</id>
     <type>NumericPad</type>
     <attribute>
        <rect>
            <x>450</x>
            <y>400</y>
            <width>400</width>
            <heigh>300</heigh>
        </rect>
    </attribute>
    <action>
        <numericPadAction>
            <targetId>3020303</targetId>  
        </numericPadAction>
    </action>
	
   </component>
    <component>
        <id>3020304</id>
        <type>Button</type>
        <attribute>
            <text>确认</text>
            <rect>
                <x>500</x>
                <y>800</y>
                <width>200</width>
                <heigh>70</heigh>
            </rect>
        </attribute>
        <action>
            <sendMsgAction>
                <prsCode>phonenum_check</prsCode>
                <conditions>3020303</conditions>
                <nextStep>
                    <nextPanel>30203</nextPanel>
                    <display>3020405</display>
                    <trigger>3020306</trigger>
                </nextStep>
                <exception>
                    <nextPanel>302899</nextPanel>
                    <display>302897</display>
                </exception>
                <checkRules>
                    <notNull>
                        <content>3020303</content>
                        <errMsg>请输入手机号码</errMsg>
                    </notNull>
                </checkRules>
            </sendMsgAction>
        </action>
    </component>
    <component>
        <id>3020306</id>
        <type>Button</type>
        <attribute>
            <text>确认</text>
            <rect>
                <x>500</x>
                <y>800</y>
                <width>200</width>
                <heigh>70</heigh>
            </rect>
        </attribute>
        <action>
            <insertICardAction>
                <cardType>HISCard</cardType>
                <nextStep>
                    <nextPanel>30204</nextPanel>
                    <display>3020405</display>
                    <trigger>3020402</trigger>
                </nextStep>
                <exception>
                    <nextPanel>302899</nextPanel>
                    <display>302896</display>
                </exception>
                <animationTip>/image/pop_out.gif</animationTip>
            </insertICardAction>
        </action>
    </component>
    <component>
        <id>3020310</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>1500</x>
                <y>2400</y>
                <width>600</width>
                <heigh>50</heigh>
            </rect>
            <text>提示信息:</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
                <fontStyle>BOLD</fontStyle> <!--optional setting, valid value is BOLD/PLAIN/ITALIC -->
            </setFontAction>
        </action>
        
    </component>

	<component>
        <id>3020316</id>
        <type>Button</type>
        <attribute>
            <text>&lt;html&gt;&lt;center&gt;返回&lt;br&gt;主界面&lt;center&gt;&lt;/html&gt;</text>
			<!--<icon>/image/105.png</icon>-->
            <rect>
                <x>1000</x>
                <y>800</y>
                <width>150</width>
                <heigh>100</heigh>
            </rect>
			
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>30</nextPanel>
            </jumpPanelAction>
            <cleanAction>
                <conditions>3020203,3020205,3020207,3020209,3020212,3020214,3020303</conditions>
            </cleanAction>
        </action>
        <action> 
            <setFontAction>
                <fontSize>24</fontSize>
            </setFontAction>
        </action>
    </component>  
</panel>
