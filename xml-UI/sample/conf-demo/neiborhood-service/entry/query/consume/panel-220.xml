<panel
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../../../conf/WindowXmlSchema.xsd'>
    <id>220</id>
    <type>Panel</type>
    <component>
        <id>2201</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>70</y>
                <width>600</width>
                <heigh>150</heigh>
            </rect>
            <text>消费信息记录查询</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>45</fontSize>
            </setFontAction>
        </action>
    </component>
    
    <component>
        <id>2202</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>230</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
            <text>智能卡号</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>2203</id>
        <type>TextField</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>230</y>
                <width>400</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>2203</upCursor>
                <downCursor>2205</downCursor>
            </moveCursorAction>
        </action>
    </component>
	
    <component>
        <id>2204</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>300</x>
                <y>330</y>
                <width>300</width>
                <heigh>60</heigh>
            </rect>
            <text>查询密码</text>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>35</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <component>
        <id>2205</id>
        <type>PasswordField</type>
        <attribute>
            <rect>
                <x>450</x>
                <y>330</y>
                <width>150</width>
                <heigh>60</heigh>
            </rect>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>2203</upCursor>
                <downCursor>2206</downCursor>
            </moveCursorAction>
            <limitInputAction>
                <length>6</length>
            </limitInputAction>	
            <playMediaAction>
                <media>./media/passwd.wav</media>
            </playMediaAction>
        </action>
    </component>
	
    <component>
        <id>2206</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>430</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>查询</text>
        </attribute>
        <action>
            <moveCursorAction>
                <upCursor>2205</upCursor>
                <downCursor>2207</downCursor>
            </moveCursorAction>
            <sendMsgAction>
                <prsCode>queryConsume</prsCode>
                <conditions>2203, 2205</conditions>
                <nextStep>  
                    <nextPanel>220</nextPanel> 
                    <display>22010</display>  
                </nextStep>
                <exception> 
                    <nextPanel>226</nextPanel>  
                    <display>2263</display>  
                </exception>			
                <checkRules>
                    <notNull>
                        <content>2203</content>
                        <errMsg>智能卡号不能为空</errMsg>
                    </notNull>			
                    <notNull>
                        <content>2205</content>
                        <errMsg>查询密码不能为空</errMsg>
                    </notNull>
                </checkRules>		
            </sendMsgAction>		
        </action>
    </component>
	
    <component>
        <id>2207</id>
        <type>Button</type>
        <attribute>
            <rect>
                <x>700</x>
                <y>430</y>
                <width>250</width>
                <heigh>80</heigh>
            </rect>
            <text>返回</text>
        </attribute>
        <action>
            <jumpPanelAction>
                <nextPanel>205</nextPanel>
            </jumpPanelAction>
            <cleanAction>
                <conditions>2203,2205,22010</conditions>
            </cleanAction>
        </action>	
    </component>
    
    <component>
        <id>2208</id>
        <type>Label</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>970</y>
                <width>1024</width>
                <heigh>70</heigh>
            </rect>
            <text>   消费查询信息管理</text>
            <debug>false</debug>
        </attribute>
        <action>
            <setFontAction>
                <fontSize>25</fontSize>
            </setFontAction>
        </action>
    </component>
	
    <decorator>
        <id>2209</id>
        <type>ScrollPanel</type>
        <attribute>
            <rect>
                <x>0</x>
                <y>560</y>
                <width>1280</width>
                <heigh>400</heigh>
            </rect>
            <debug>false</debug>
        </attribute>
        <component>
            <id>22010</id>
            <type>Table</type>
            <attribute>
                <rect>
                    <x>0</x>
                    <y>560</y>
                    <width>1280</width>
                    <heigh>400</heigh>
                </rect>
                <debug>false</debug>
            </attribute>
            <action>
                <setFontAction>
                    <fontSize>22</fontSize>
                </setFontAction>
                <showTableAction>
                    <columnNames>流水号, 消费时间, 消费金额, 消费业务类型, 备注</columnNames>
                </showTableAction>
            </action>
        </component>
    </decorator>
</panel>
